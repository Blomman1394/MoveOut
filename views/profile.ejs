<%- include("header", { title: "Profile", user: user}); %>

<h1>User Profile</h1>

<% if (errorMessage) { %>
    <div class="error-message"><%= errorMessage %></div>
<% } %>

<h2>Email: <%= user.email %></h2>

<form action="/profile/update-email" method="POST">
    <div class="form-group">
        <label for="newEmail">New Email:</label>
        <input type="email" id="newEmail" name="newEmail" required>
    </div>
    <button type="submit">Update Email</button>
</form>
<form action="/profile/delete-account" method="POST" style="margin-top: 20px;">
    <button type="submit" class="delete-account-button">Delete Account</button>
</form>
<%- include("footer"); %>